<div>
        <form action="/rooms/edit/{{room._id}}" method="post">
                <label for="name">Name: </label>
                <input type="text" name="name" id="name" value="{{room.name}}">
                <label for="description">Description: </label>
                <textarea type="text" name="description" id="description" value="{{room.description}}">{{room.description}}</textarea>
                <label for="imageUrl">imageUrl: </label>
                <input type="text" name="imageUrl" id="imageUrl" value="{{room.imageUrl}}">
                <button class="btn" type="submit">Edit</button>
        </form>
        {{message}}
</div>